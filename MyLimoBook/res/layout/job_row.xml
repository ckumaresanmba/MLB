<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d7d4cf"
    android:paddingTop="5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
           android:paddingLeft="7dp"
        android:paddingTop="4dp"
        android:paddingRight="5dp"
        android:weightSum="2"
        android:paddingBottom="3dp"
        android:orientation="vertical" >

      <!--   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >

            <View
                android:layout_width="2dp"
                android:layout_height="5dp"
                android:background="@color/black" />
        </LinearLayout> -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#000"
            android:gravity="center"
            android:orientation="vertical"
          >

            <TextView
                android:id="@+id/textView_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d7d4cf"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:layout_marginLeft="7dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="11"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:text="9:45 am"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/linlistmidle"
        android:layout_height="match_parent"
        android:layout_weight="2" android:clickable="true"
        android:orientation="vertical"
        android:weightSum="2" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
              android:gravity="center_vertical"
            android:padding="5dp"
            android:marqueeRepeatLimit="marquee_forever"
         
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
           
            android:focusableInTouchMode="true"
            android:freezesText="true"
            
            android:paddingLeft="10dp"
            android:text="Villawoodsfdsfdsfdsfdsfdsfdsfd "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/viewLine" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
           android:marqueeRepeatLimit="marquee_forever"
         
            android:ellipsize="marquee"
            
            android:maxLines="2"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:text="Black town"
            android:textColor="@color/black" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.94"
        android:gravity="center"
        android:minWidth="60dp"
        android:clickable="false"
      
        android:padding="4dp" >

        <TextView
            android:id="@+id/textView_amt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
   
            android:gravity="center"
            android:padding="8dp"
            android:text="$150"
         android:layout_centerHorizontal="true"
            android:clickable="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />

   <TextView
       android:id="@+id/but1_for_confirm_offload"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:background="@drawable/selector_offload_but"
       android:clickable="true"
       android:gravity="center"
       android:padding="8dp"
       android:layout_marginBottom="8dp"
       android:text="Offload"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:textColor="@color/black"
       android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>