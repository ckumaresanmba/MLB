<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    tools:context=".DashBoardActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/top" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_centerHorizontal="true"      android:textAllCaps="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"   style="@style/fontstyle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/yellow"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_signout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"   style="@style/fontstyle"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"  android:padding="5dp"
            android:background="@drawable/signout"
             
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bottom"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/TextView01_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" "
        
            
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/IB_settinngs"
             android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
           
            android:background="@null"
        android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/setting" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
        
            android:scaleType="centerInside"
            android:src="@drawable/reload"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/TableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
       android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >
   <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />



       
        
        <Button
            android:id="@+id/button_Job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/job" />

        
         <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />

 <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/contacts" />
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
               <Button
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/search_dasjboard" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <Button
            android:id="@+id/button_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/notification" />

     

       <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />


 


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </TableRow>
    </LinearLayout>

</RelativeLayout>