<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:background="@drawable/contacts_row_bg" android:orientation="horizontal" >
    
    
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
      
        android:layout_alignParentLeft="true"
       
       android:layout_centerVertical="true"
     android:src="@drawable/com_facebook_profile_picture_blank_square"
     
        android:scaleType="fitCenter"
         android:padding="5dp"/>

    <LinearLayout
        android:id="@+id/lin_for_search_contact"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:weightSum="2"
        
        
        android:layout_toLeftOf="@+id/CheckBox_add"
        android:layout_toRightOf="@+id/imageView1"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
           
            android:singleLine="true"
              android:gravity="center_vertical"
       
            android:marqueeRepeatLimit="marquee_forever"
         
            android:ellipsize="marquee" style="@style/fontstyle"
            android:scrollHorizontally="true"
           
            android:focusableInTouchMode="true"
            android:freezesText="true"
            
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Villawoodsfdsfdsfdsfdsfdsfdsfd "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
      <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
               android:background="@drawable/line"  />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
              android:gravity="center_vertical"
        
            android:marqueeRepeatLimit="marquee_forever"
         
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
           
            android:focusableInTouchMode="true"
            android:freezesText="true"
            
             android:padding="5dp" style="@style/fontstyle"
            android:text="Villawoodsfdsfdsfdsfdsfdsfdsfd "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/CheckBox_add"
        style="@android:style/Widget.Holo.Light.CompoundButton.CheckBox"
      android:background="@drawable/btn_check_off_holo_light"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
      
        android:layout_centerVertical="true"
       />

</RelativeLayout>